@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/site.css" />


<div class="hero-section text-center p-5 rounded-3" style="background-color: #1c1c1c;">
    <h1 class="display-4 mb-3" style="color: #00c6ff;">Welcome to Smart Assistant</h1>
    <p class="lead" style="color: #adb5bd;">Your smart companion to manage tasks, events, and reminders effortlessly.</p>

    <form method="get" asp-action="GlobalSearch" class="mt-3 position-relative">
        <input type="text" id="search-input" name="searchQuery" placeholder="Search tasks, events, and teams"
               class="form-control form-control-lg" style="max-width: 400px; margin: 0 auto; background-color: #2a2a2a; color: #fff; border-color: #444;" />

        <!-- Search suggestions will appear here -->
        <div id="search-results" class="list-group position-absolute" style="width: 100%; z-index: 1000;"></div>
    </form>

    <a href="/Task/Index" class="btn btn-lg me-3" style="background-color: #28a745; color: #fff; border-color: #28a745;">View Tasks</a>
    <a href="/Event/Index" class="btn btn-lg" style="background-color: #17a2b8; color: #fff; border-color: #17a2b8;">View Events</a>
</div>

<section class="features-section mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm" style="background-color: #2a2a2a; border-color: #00c6ff;">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #00c6ff;">Manage Teams</h5>
                        <p class="card-text" style="color: #adb5bd;">Create teams, collaborate, and communicate effectively with the built-in chat feature.</p>
                        <a href="/Team/Index" class="btn btn-outline-primary" style="color: #00c6ff; border-color: #00c6ff;">Go to Teams</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm" style="background-color: #2a2a2a; border-color: #28a745;">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #28a745;">Stay on Track</h5>
                        <p class="card-text" style="color: #adb5bd;">Get timely reminders for tasks and events so you never miss out on anything important.</p>
                        <a href="/Reminder/Index" class="btn btn-outline-success" style="color: #28a745; border-color: #28a745;">View Reminders</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm" style="background-color: #2a2a2a; border-color: #17a2b8;">
                    <div class="card-body">
                        <h5 class="card-title" style="color: #17a2b8;">Calendar Overview</h5>
                        <p class="card-text" style="color: #adb5bd;">See all your tasks, events, and reminders in one consolidated calendar view.</p>
                        <a href="/Calendar/Index" class="btn btn-outline-info" style="color: #17a2b8; border-color: #17a2b8;">Open Calendar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


    <script src="~/js/search.js"></script>
}