@model SmartAssistant.Shared.Models.ReminderModel

<h2>Reminder Details</h2>

<div>
    <h4>Reminder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.ReminderMessage</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.ReminderDate</dd>
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User.UserName</dd>
    </dl>
</div>
<p>
    <a href="@Url.Action("Edit", new { id = Model.Id })">Edit</a> |
