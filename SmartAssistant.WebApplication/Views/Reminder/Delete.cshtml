@model SmartAssistant.Shared.Models.ReminderDeleteModel

<h2>Delete Reminder</h2>
<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.ReminderMessage</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.ReminderDate</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

<a href="@Url.Action("Index")">Back to List</a>
