@model IEnumerable<SmartAssistant.Shared.Models.ReminderModel>

<h2>Delete Reminder</h2>

@foreach (var item in Model)
{
    <div>
        <h4>Are you sure you want to delete this?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Message</dt>
            <dd class="col-sm-10">@item.ReminderMessage</dd>
            <dt class="col-sm-2">Date</dt>
            <dd class="col-sm-10">@item.ReminderDate</dd>
        </dl>

        <form asp-action="DeleteConfirmed">
            <input type="hidden" name="id" value="@item.Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
}
<p>
    <a href="@Url.Action("Index")">Back to List</a>
</p>