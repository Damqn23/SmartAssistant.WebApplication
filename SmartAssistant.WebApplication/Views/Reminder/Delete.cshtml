@using SmartAssistant.Shared.Models.Reminder
@model ReminderDeleteModel

<div class="container mt-5">
    <h2 class="display-6 mb-4 text-danger">Delete Reminder</h2>
    <h4 style="color: #fff;">Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color: #00c6ff;">Message</dt>
        <dd class="col-sm-10" style="color: #fff;">@Model.ReminderMessage</dd>
        <dt class="col-sm-2" style="color: #00c6ff;">Date</dt>
        <dd class="col-sm-10" style="color: #fff;">@Model.ReminderDate</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Back to List</a>
</div>
