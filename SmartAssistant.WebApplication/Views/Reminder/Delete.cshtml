@model SmartAssistant.Shared.Models.ReminderModel

<h2>Delete Reminder</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.ReminderMessage</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.ReminderDate</dd>
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User.UserName</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>
<p>
    <a href="@Url.Action("Index")">Back to List</a>
</p>
