@using SmartAssistant.Shared.Models
@model ReminderEditModel

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ReminderMessage"></label>
        <input asp-for="ReminderMessage" class="form-control" />
        <span asp-validation-for="ReminderMessage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReminderDate"></label>
        <input asp-for="ReminderDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="ReminderDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
