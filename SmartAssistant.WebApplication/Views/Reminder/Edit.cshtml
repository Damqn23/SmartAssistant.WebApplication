@model SmartAssistant.Shared.Models.ReminderEditModel

<h2>Edit Reminder</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ReminderMessage"></label>
        <input asp-for="ReminderMessage" class="form-control" />
        <span asp-validation-for="ReminderMessage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ReminderDate"></label>
        <input asp-for="ReminderDate" type="datetime-local" class="form-control" />
        <span asp-validation-for="ReminderDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("Index")">Back to List</a>
