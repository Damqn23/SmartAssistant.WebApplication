@model IEnumerable<SmartAssistant.Shared.Models.ReminderModel>

<h2>Reminders</h2>

<p>
    <a href="@Url.Action("Create")">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Message</th>
            <th>Date</th>
            <th>User</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.ReminderMessage ?? "N/A")</td>
                <td>@(item.ReminderDate != DateTime.MinValue ? item.ReminderDate.ToString() : "N/A")</td>
                <td>@(item.User != null ? item.User.Email : "N/A")</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.Id })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>