@using SmartAssistant.Shared.Models.Task
@model TaskEditModel

<div class="container mt-5">
    <h2 class="display-6 mb-4" style="color: #007bff;">Edit Task</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label" style="color: #007bff;"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="DueDate" class="control-label" style="color: #007bff;"></label>
            <input asp-for="DueDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="EstimatedTimeToComplete" class="control-label" style="color: #007bff;"></label>
            <input asp-for="EstimatedTimeToComplete" class="form-control" />
            <span asp-validation-for="EstimatedTimeToComplete" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Priority" class="control-label" style="color: #007bff;"></label>
            <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<PriorityLevel>()">
            </select>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <div class="form-check mb-3">
            <input asp-for="IsCompleted" class="form-check-input" />
            <label asp-for="IsCompleted" class="form-check-label" style="color: #007bff;"></label>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Back to List</a>
</div>