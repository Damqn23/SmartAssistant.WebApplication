@using SmartAssistant.Shared.Models.Task
@model TaskDeleteModel

<div class="container mt-5">
    <h2 class="display-6 mb-4 text-danger">Delete Task</h2>

    <h3 style="color: #fff;">Are you sure you want to delete this?</h3>

    <div class="card border-danger mb-4" style="background-color: #2a2a2a;">
        <div class="card-body">
            <h4 class="card-title" style="color: #dc3545;">@Model.Description</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2" style="color: #00c6ff;">Description</dt>
                <dd class="col-sm-10" style="color: #fff;">@Model.Description</dd>
                <dt class="col-sm-2" style="color: #00c6ff;">Due Date</dt>
                <dd class="col-sm-10" style="color: #fff;">@Model.DueDate.ToString("yyyy-MM-dd HH:mm")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
