@model SmartAssistant.Shared.Models.Event.EventCreateModel

<div class="container mt-5">
    <h2 class="display-6 mb-4" style="color: #00c6ff;">Create New Event</h2>

    <form asp-action="Create">
        <div class="form-group mb-3">
            <label asp-for="EventTitle" class="control-label" style="color: #00c6ff;"></label>
            <input asp-for="EventTitle" class="form-control" style="background-color: #2a2a2a; color: #fff; border-color: #444;" />
            <span asp-validation-for="EventTitle" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="EventDate" class="control-label" style="color: #00c6ff;"></label>
            <input asp-for="EventDate" type="datetime-local" class="form-control" style="background-color: #2a2a2a; color: #fff; border-color: #444;" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>
