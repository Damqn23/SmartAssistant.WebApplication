@model IEnumerable<SmartAssistant.Shared.Models.Event.EventModel>

<div class="container mt-5">
    <h2 class="display-6 mb-4" style="color: #007bff;">Your Events</h2>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eventModel in Model)
            {
                <tr>
                    <td>@eventModel.EventTitle</td>
                    <td>@eventModel.EventDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@eventModel.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@eventModel.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-success mt-3">Create New Event</a>
</div>