@model IEnumerable<SmartAssistant.Shared.Models.Event.EventModel>

<h2>Your Events</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventModel in Model)
        {
            <tr>
                <td>@eventModel.EventTitle</td>
                <td>@eventModel.EventDate</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@eventModel.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@eventModel.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Event</a>
