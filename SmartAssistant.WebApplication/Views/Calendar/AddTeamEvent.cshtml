@using SmartAssistant.Shared.Models.Team
@model TeamEventCreateModel

<div class="container mt-5">
    <h2 class="display-6 mb-4" style="color: #007bff;">Add Event for Team</h2>

    <form asp-action="AddTeamEvent" method="post">
        @Html.HiddenFor(m => m.TeamId)

        <div class="form-group mb-3">
            <label asp-for="EventTitle" class="form-label"></label>
            <input asp-for="EventTitle" class="form-control" />
            <span asp-validation-for="EventTitle" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EventDate" class="form-label"></label>
            <input asp-for="EventDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="AssignedUserId" class="form-label">Assign to Member</label>
            @Html.DropDownListFor(m => m.AssignedUserId, Model.TeamMembers, "Select a member", new { @class = "form-control" })
            <span asp-validation-for="AssignedUserId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Event</button>
    </form>
</div>