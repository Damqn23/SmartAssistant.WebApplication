@using SmartAssistant.Shared.Models.Team
@model TeamTaskCreateModel

<div class="container mt-5">
    <h2 class="display-6 mb-4" style="color: #00c6ff;">Add Task for Team</h2>

    <form asp-action="AddTeamTask" method="post">
        @Html.HiddenFor(m => m.TeamId)

        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label" style="color: #00c6ff;"></label>
            <input asp-for="Description" class="form-control" style="background-color: #2a2a2a; color: #fff; border-color: #444;" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DueDate" class="form-label" style="color: #00c6ff;"></label>
            <input asp-for="DueDate" type="datetime-local" class="form-control" style="background-color: #2a2a2a; color: #fff; border-color: #444;" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="AssignedUserId" class="form-label" style="color: #00c6ff;">Assign to Member</label>
            @Html.DropDownListFor(m => m.AssignedUserId, Model.TeamMembers, "Select a member", new { @class = "form-control", style = "background-color: #2a2a2a; color: #fff; border-color: #444;" })
            <span asp-validation-for="AssignedUserId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="EstimatedTimeToComplete" class="form-label" style="color: #00c6ff;"></label>
            <input asp-for="EstimatedTimeToComplete" class="form-control" style="background-color: #2a2a2a; color: #fff; border-color: #444;" />
            <span asp-validation-for="EstimatedTimeToComplete" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Priority" class="form-label" style="color: #00c6ff;"></label>
            <input asp-for="Priority" class="form-control" style="background-color: #2a2a2a; color: #fff; border-color: #444;" />
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Task</button>
    </form>
</div>
