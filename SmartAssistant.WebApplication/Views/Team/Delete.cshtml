@model SmartAssistant.Shared.Models.Team.TeamModel

<div class="container mt-5">
    <h2 class="display-6 mb-4 text-danger">Delete Team</h2>

    <p class="mb-4">Are you sure you want to delete the team <strong style="color: #00c6ff;">@Model.TeamName</strong>?</p>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="d-flex justify-content-start">
            <button type="submit" class="btn btn-danger me-3">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
