@model IEnumerable<SmartAssistant.Shared.Models.Team.TeamModel>

<div class="container mt-5">
    <h2 class="display-6 mb-4" style="color: #00c6ff;">Select a Team Chat</h2>

    <div class="list-group">
        @foreach (var team in Model)
        {
            <a href="@Url.Action("TeamChat", "Team", new { teamId = team.Id })"
               class="list-group-item list-group-item-action shadow-sm mb-2 rounded"
               style="background-color: #2a2a2a; color: #fff; border-color: #444;">
                <h5 class="mb-1" style="color: #00c6ff;">@team.TeamName</h5>
            </a>
        }
    </div>
</div>
