@model SmartAssistant.Shared.Models.Team.TeamCreateModel

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="display-6" style="color: #00c6ff;">Create New Team</h2>
    </div>

    <form asp-action="Create" method="post" id="createForm" class="shadow-sm p-4 rounded" style="background-color: #2a2a2a; color: #fff;">
        <div class="form-group mb-3">
            <label asp-for="TeamName" class="control-label" style="color: #00c6ff;"></label>
            <input asp-for="TeamName" class="form-control" style="background-color: #3c3c3c; color: #fff; border-color: #444;" />
            <span asp-validation-for="TeamName" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-between">
            <input type="submit" value="Create Team" class="btn btn-success" id="submitBtn" />
            <a asp-action="Index" class="btn btn-secondary">Back to Team List</a>
        </div>
    </form>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script>
            // Disable the submit button after the form is submitted
            document.getElementById('createForm').addEventListener('submit', function () {
                document.getElementById('submitBtn').disabled = true;
            });
        </script>
    }
</div>