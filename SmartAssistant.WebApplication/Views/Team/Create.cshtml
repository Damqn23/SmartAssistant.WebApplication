@model SmartAssistant.Shared.Models.Team.TeamCreateModel

<h2>Create New Team</h2>

<form asp-action="Create" method="post" id="createForm">
    <div class="form-group">
        <label asp-for="TeamName" class="control-label"></label>
        <input asp-for="TeamName" class="form-control" />
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create Team" class="btn btn-primary" id="submitBtn" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to Team List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Disable the submit button after the form is submitted
        document.getElementById('createForm').addEventListener('submit', function () {
            document.getElementById('submitBtn').disabled = true;
        });
    </script>
}
