@using SmartAssistant.Shared.Models.Team
@model TeamModel

<div class="container mt-5">
    <h2 class="display-6 mb-4" style="color: #007bff;">Team Details: @Model.TeamName</h2>

    <p><strong>Owner:</strong> @Model.OwnerUserName</p>

    <h3 class="mt-4" style="color: #007bff;">Members</h3>
    <ul class="list-group mb-4">
        @foreach (var member in Model.Members)
        {
            <li class="list-group-item">@member.UserName</li>
        }
    </ul>

    <h4 class="mt-4" style="color: #007bff;">Add a Member</h4>
    <form asp-action="AddUserToTeam" method="post" class="mb-4">
        <input type="hidden" name="teamId" value="@Model.Id" />
        <div class="form-group mb-3">
            <label for="userName" class="control-label" style="color: #007bff;">Username</label>
            <input type="text" id="userName" name="userName" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Add Member</button>
    </form>

    <h4 class="mt-4 text-danger">Remove a Member</h4>
    <form asp-action="RemoveUserFromTeam" method="post">
        <input type="hidden" name="teamId" value="@Model.Id" />
        <div class="form-group mb-3">
            <label for="userName" class="control-label" style="color: #dc3545;">Username</label>
            <input type="text" id="userName" name="userName" class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger">Remove Member</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary mt-4">Back to Team List</a>
</div>